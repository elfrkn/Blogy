@model  LeaveACommentViewModel

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Bırakın</h3>
  
    <form method="post" class="p-5 bg-light" action="/Comment/CreateComment">
        <div class="form-group">
            <input type="hidden" asp-for="ArticleID" />
            <label for="name">Adınız *</label>
            <input type="text" class="form-control" id="name" asp-for="NameSurname">
        </div>
        <div class="form-group">
            <label for="email">Mail Adresiniz *</label>
            <input type="email" class="form-control" id="email" asp-for="Mail">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea  id="message" asp-for="Comment" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Gönder" class="btn btn-primary">
        </div>

    </form>
</div>