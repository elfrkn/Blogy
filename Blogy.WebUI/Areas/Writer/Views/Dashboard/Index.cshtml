@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-description">
                    </p>
                    <div class="table-responsive">
                        <div class="row">
                            
                            @await Component.InvokeAsync("_WheatherComponentPartial")
                            <div class="col-xl-4 grid-margin stretch-card">
                                <!--activity-->
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <span class="d-flex justify-content-between">
                                                <span>Etkinlikler</span>
                                            </span>
                                        </h4>
                                        <ul class="gradient-bullet-list border-bottom">
                                            <li>
                                                <h6 class="mb-0"> Cumartesi günü tüm yazarlarımız kahvaltıya davetlidir. </h6>
                                                <p class="text-muted">3 saat önce</p>
                                            </li>
                                            <li>
                                                <h6 class="mb-0">Kamp etkinliğine katılmak isteyen yazarlarımız destek panelinden Adminimize ulaşabilir.</h6>
                                                <p class="text-muted">
                                                    <span>1 saat önce</span>
                                                    <span class="d-inline-block">
                                                        <span class="d-flex d-inline-block">
                                                            <img class="ml-1" src="assets/images/faces/face1.jpg" alt="" />
                                                            <img class="ml-1" src="assets/images/faces/face10.jpg" alt="" />
                                                            <img class="ml-1" src="assets/images/faces/face14.jpg" alt="" />
                                                        </span>
                                                    </span>
                                                </p>
                                            </li>
                                            <li>
                                                <h6 class="mb-0">Hava muhalefetinde dolayı kitap etkinliğimiz iptal edilmiştir.</h6>
                                                <p class="text-muted">5 saat önce</p>
                                            </li>
                                            <li>
                                                <h6 class="mb-0"> Kişisel Gelişim etkinliğimiz Pazartesi günü saat 14:00`de başlayacaktır. </h6>
                                                <p class="text-muted">6 saat önce</p>
                                            </li>
                                        </ul>
                                        <a class="text-black mt-3 mb-0 d-block h6" href="#">Tüm etkinlikleri gör<i class="mdi mdi-chevron-right"></i></a>
                                    </div>
                                </div>
                                <!--activity ends-->
                            </div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="col-sm-12 mt-3">
                                <h3>İstatistikler</h3>
                            </div>
                            <div class="col-xl-12 col-lg-12 stretch-card grid-margin">
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                        <div class="card bg-warning">
                                            <div class="card-body px-3 py-4">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="color-card">
                                                        <p class="mb-0 color-card-head">Makale Sayısı</p>
                                                        <h2 class="text-white">
                                                        @ViewBag.blog
                                                        </h2>
                                                    </div>
                                                    <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                                                </div>
                                            <h6 class="text-white">Tüm bloglar</h6>
                                            </div>
                                        </div>
                                    </div>
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                        <div class="card bg-danger">
                                            <div class="card-body px-3 py-4">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="color-card">
                                                        <p class="mb-0 color-card-head">Gelen Mesaj</p>
                                                        <h2 class="text-white">
                                                        @ViewBag.InboxMessage
                                                        </h2>
                                                    </div>
                                                    <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                                                </div>
                                            <h6 class="text-white">Tüm Gelen Mesajlar</h6>
                                            </div>
                                        </div>
                                    </div>
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                        <div class="card bg-primary">
                                            <div class="card-body px-3 py-4">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="color-card">
                                                        <p class="mb-0 color-card-head">Giden Mesaj</p>
                                                        <h2 class="text-white">
                                                        @ViewBag.SendMessage
                                                        </h2>
                                                    </div>
                                                    <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                                                </div>
                                            <h6 class="text-white">Tüm Giden Mesajlar</h6>
                                        </div>
                                        </div>
                                    </div>
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                        <div class="card bg-success">
                                            <div class="card-body px-3 py-4">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="color-card">
                                                        <p class="mb-0 color-card-head">Bildirimler</p>
                                                        <h2 class="text-white">
                                                        @ViewBag.Notification
                                                        </h2>
                                                    </div>
                                                    <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                                                </div>
                                                <h6 class="text-white">Tüm Bildirimler</h6>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



