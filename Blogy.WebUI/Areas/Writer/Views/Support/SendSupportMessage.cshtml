@model Blogy.EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "SendSupportMessage";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Destek Sayfası</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Destek İşlemleri</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Destek </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Admin Destek  Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan admin ile iletişime geçebilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <form method="post">
                            
                            <label>Konu</label>
                            <input type="text" asp-for="Subject" class="form-control" />
                            <br />
                            <label>Mesajınız</label>
                            <textarea rows="10" class="form-control" id="myeditor" asp-for="Content"></textarea>
                            <br />
                            <button class="btn btn-info">Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

