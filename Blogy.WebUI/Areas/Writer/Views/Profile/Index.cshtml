@model Blogy.WebUI.Areas.Writer.Models.WriterEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Yazar Bilgilerini Güncelleme Sayfası</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Yazar İşlemleri</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Profil Düzenleme </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yazar Bilgilerini Güncelleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan size ait bilgileri görüntüleyebilir üzerinde işlem yapabilirsiniz
                    </p>
                    <div class="table-responsive">
                        <form method="post">
                            <label>Adınız </label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <br />

                            <label>Soyadınız</label>
                            <input type="text" asp-for="Surname" class="form-control" />
                            <br />

                            <label for="exampleInputPassword4">Şifreniz</label>
                            <input type="password" asp-for="Password" class="form-control" id="exampleInputName1" placeholder="Şifreniz">
                            <br />

                            <div class="form-group">
                                <label for="exampleInputPassword4">Şifre Tekrar</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputName1" placeholder="Şifre Tekrar">
                            </div>
                            <div class="form-group">
                                <label>Resim Seç</label>
                                <input type="file" asp-for="Picture">
                            </div>
                            <br />
                           
                            <button class="btn btn-info">Değişiklikleri Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
